@model  Azteca.Models.Postulante

@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    ViewBag.ICOHome = "";
    ViewBag.ICOCV = "active";
    ViewBag.ICOHacemos = "" ;
}


@using (var f = Html.Bootstrap().Begin(new Form("Submit", "Carga").Class("form-horizontal")))
{
    @(f.ControlGroup().TextBoxFor(m => m.cv_name)
        .Placeholder("Nombre")
        )
    @(f.ControlGroup().TextBoxFor(m => m.cv_lastname)
        .Placeholder("Apellido")
    )
    @(f.ControlGroup().TextBoxFor(m => m.cv_email)
        .Placeholder("Nombre")
    )
    @(f.ControlGroup().TextBoxFor(m => m.cv_dateofbirth)
        .Placeholder("Nombre")
    )
    @f.ControlGroup().CustomControls(Html.Bootstrap().SubmitButton())
}



<script>
    $(document).ready(function () {
        $("#cv_degree").change( function () {
            var option = $("#cv_degree option:selected");
            if (option.val() == "103") {
                $("#cv_other").parent().parent().removeClass("hidden");
            } else {
                $("#cv_other").parent().parent().addClass("hidden");
            }
        });

        $(".form-group span").each(function () {
            var text = $(this).text();
            if (text != "") {
                $(this).parents(".form-group").addClass("has-error");
            }
        });

        
    });



</script>